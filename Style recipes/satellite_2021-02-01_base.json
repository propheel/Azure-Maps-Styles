{
    "layers": [
        {
            "id": "background",
            "type": "background",
            "minzoom": 0,
            "maxzoom": 24,
            "metadata": {
                "microsoft.maps:layerGroup": "base"
            },
            "layout": {
                "visibility": "visible"
            },
            "paint": {
                "background-color": {
                    "stops": [
                        [
                            0,
                            "rgb(255, 255, 255)"
                        ],
                        [
                            2,
                            "rgb(255, 255, 255)"
                        ]
                    ]
                },
                "background-opacity": 1
            }
        },
        {
            "id": "satelliteLayer",
            "type": "raster",
            "minzoom": 1,
            "maxzoom": 19,
            "metadata": {
                "microsoft.maps:layerGroup": "base"
            },
            "layout": {
                "visibility": "visible"
            },
            "paint": {
                "raster-opacity": 1,
                "raster-saturation": 0,
                "raster-contrast": 0,
                "raster-fade-duration": 300
            }
        }
    ]
}
